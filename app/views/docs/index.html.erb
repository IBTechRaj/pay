<div class = "container" style = "padding-top:20px; text-align:center">
<h1>File Uploader </h1>




<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<br />

<%= link_to "Upload New Doc", new_doc_path, class: "btn btn-primary" %>
<br />
<br />

<table class = "table table-bordered table-striped">
   <thead>
      <tr>
         <th>Title</th>
         
         <th>Description</th>
         
         <th>Tag 1</th>
         <th>Tag 2</th>
      </tr>
   </thead>
   
   <tbody>
      <% @docs.each do |doc| %>
         
         <tr>
            <td><%= doc.title %></td>
            <td><%= doc.description %></td>
            <td><%= doc.tag1 %></td>
            <td><%= doc.tag2 %></td>
            <td><%= button_to "Delete",  doc, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{doc.title}?" %></td>
         </tr>
         
      <% end %>
   </tbody>
   
</table>
<%= link_to "Log out", destroy_user_session_path, :method => :delete %>
</div>